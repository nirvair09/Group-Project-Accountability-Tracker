{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@gpa/shared/*": ["../../shared/*"],
      "@gpa/shared": ["../../shared"]
    }
  },
  "include": ["src/**/*", "../../shared/**/*"]
}
